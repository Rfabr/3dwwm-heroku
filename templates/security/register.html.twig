{% extends 'base.html.twig' %}

{% block title %}Inscription | 3DWWM{% endblock %}

{% block content %}
    <section>
        <h1 class="title">CRÃ‰EZ VOTRE COMPTE</h1>
        {{ form_start(form) }}
            <div class="form-register">
                <div class="flex">
                    <label>{{ form_label(form.firstname) }}</label>
                    <span>{{ form_widget(form.firstname) }}</span>
                </div>
                <br>
                <div class="flex">
                    <label>{{ form_label(form.lastname) }}</label>
                    <span>{{ form_widget(form.lastname) }}</span>
                </div>
                <br>
                {% if notification %}
                    <div class="register-error">{{ notification }}</div>
                {% endif %}
                <div class="flex">
                    <label>{{ form_label(form.email) }}</label>
                    <span>{{ form_widget(form.email) }}</span>
                </div>
                <br>
                <div class="register-error">{{ form_errors(form.password.first) }}</div>
                <div class="flex">
                    <label>{{ form_label(form.password, 'MOT DE PASSE') }}</label>
                    <span>{{ form_widget(form.password.first) }}</span>
                </div>
                <br>
                <div class="flex">
                    <label>{{ form_label(form.password.second) }}</label>
                    <span>{{ form_widget(form.password.second) }}</span>
                </div>
                <div class="center">
                    {{ form_widget(form.submit) }}
                </div>
            </div>
        {{ form_end(form) }}
    </section>
{% endblock %}