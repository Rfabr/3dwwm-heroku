{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse | 3DWWM{% endblock %}

{% block content %}
    <section>
        <h1 class="title">AJOUTER UNE ADRESSE</h1>
        <a href="{{ path('app_frontend_account_address_index') }}" id="fs-12" class="link"><span class="arrow"><</span>Retour Ã  mes adresses</a>
        {{ form_start(form) }}
            <div class="form-address">
                <div>
                    <span>{{ form_widget(form.name) }}</span>
                </div>
                <div>
                    <span>{{ form_widget(form.firstname) }}</span>
